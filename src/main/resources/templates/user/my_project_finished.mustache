{{> layout/header }}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        margin: 0;
        padding: 0;
    }

    .container {
        display: flex;
        width: 100%;
        min-height: 100vh;
        background-color: #f5f5f5;
        margin-top: 70px;
        padding-bottom: 20px;
    }

    .sidebar {
        width: 300px;
        padding: 20px;
        border-right: 1px solid #ddd;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        flex-shrink: 0;
    }

    .sidebar h2 {
        font-size: 20px;
        color: #333;
        margin-bottom: 20px;
    }

    .sidebar a {
        display: block;
        padding: 15px 20px;
        margin-bottom: 10px;
        color: #333;
        text-decoration: none;
        border-radius: 5px;
        background-color: #f9f9f9;
        font-size: 16px;
        transition: background-color 0.3s;
    }

    .sidebar a:hover {
        background-color: #e9ecef;
        color: #007bff;
    }

    .content {
        flex-grow: 1;
        padding: 40px;
        background-color: #fff;
        min-height: 100vh;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .content h1 {
        font-size: 26px;
        margin-bottom: 20px;
        text-align: center;
    }

    .content h4 {
        font-size: 24px;
        margin-bottom: 10px;
        color: #333;
    }

    .table th {
        background-color: #f6fafd;
        color: #333;
    }

    .table td {
        vertical-align: middle;
    }

    .btn-detail {
        background-color: #007bff;
        color: white;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-detail:hover {
        background-color: #0056b3;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>

<div class="container">
    <!-- 사이드바 - 프리랜서 전용 메뉴 -->
    {{>layout/mypage}}

    <!-- 메인 컨텐츠 -->
    <div class="content">
        <h1><b>종료된 프로젝트</b></h1>
        <hr>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>프로젝트 이름</th>
                <th>자세한 정보 보러가기</th>
                <th>리뷰 남기기</th>
            </tr>
            </thead>
            <tbody>
            {{#projectListForPaging2}}
                <tr>
                    <td>{{projectName}}</td>
                    <td>
                        <button class="btn btn-detail" onclick="location.href='/project/detail/{{id}}'">자세한 정보 보러가기</button>
                    </td>
                    <td>
                        <button class="btn btn-secondary" onclick="confirmReview(event)">리뷰 남기기</button>
                    </td>
                </tr>
            {{/projectListForPaging2}}
            </tbody>
        </table>
    </div>
</div>

<script>
    function confirmReview(event) {
        const userConfirmed = confirm("리뷰를 작성하시겠습니까?");
        if (userConfirmed) {
            location.href = 'https://forms.gle/2v4qaBnYPo2esVBs6';
        } else {
            event.stopPropagation();
        }
    }
</script>

{{> layout/footer }}
