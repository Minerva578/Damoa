{{> layout/header }}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        margin: 0;
        padding: 0;
    }

    .container {
        display: flex;
        width: 100%;
        min-height: 100vh;
        background-color: #f5f5f5;
        margin-top: 70px;
        padding-bottom: 20px;
    }

    .sidebar {
        width: 300px;
        background-color: #fff;
        padding: 20px;
        border-right: 1px solid #ddd;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        flex-shrink: 0;
    }

    .sidebar h2 {
        font-size: 20px;
        color: #333;
        margin-bottom: 20px;
    }

    .sidebar a {
        display: block;
        padding: 15px 20px;
        margin-bottom: 10px;
        color: #333;
        text-decoration: none;
        border-radius: 5px;
        background-color: #f9f9f9;
        font-size: 16px;
        transition: background-color 0.3s;
    }

    .sidebar a:hover {
        background-color: #e9ecef;
        color: #007bff;
    }

    .content {
        flex-grow: 1;
        padding: 40px;
        background-color: #fff;
        min-height: 100vh;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-left: 0;
    }

    .content h1 {
        font-size: 26px;
        margin-bottom: 20px;
        text-align: center;
        font-weight: bold;
    }

    .table th {
        background-color: #f6fafd;
        color: #333;
    }

    .table td {
        vertical-align: middle;
    }

    .btn-detail {
        background-color: #007bff;
        color: white;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-detail:hover {
        background-color: #0056b3;
    }
</style>

<div class="container">
    <!-- 사이드바 - 프리랜서 전용 메뉴 -->


    {{> layout/mypage}}
    <div class="content">
        <h1>신청 중인 프로젝트</h1>
        <hr>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>프로젝트 이름</th>
                <th>상세 페이지</th>
            </tr>
            </thead>
            <tbody>
            {{#projectListForPaging}}
                <tr>
                    <td>{{projectName}}</td>
                    <td>
                        <button class="btn btn-detail" onclick="location.href='/project/detail/{{id}}'">상세 페이지</button>
                    </td>
                </tr>
            {{/projectListForPaging}}
            </tbody>
        </table>
    </div>
</div>

<script>
    document.getElementById("editButton").addEventListener("click", function() {
        document.querySelector(".user-info").style.display = "none";
        document.querySelector(".edit-info").style.display = "block";
    });

    document.getElementById("cancelButton").addEventListener("click", function() {
        document.querySelector(".edit-info").style.display = "none";
        document.querySelector(".user-info").style.display = "block";
    });

    document.querySelectorAll('.purchase--btn').forEach(function(btn) {
        btn.addEventListener('click', function(event) {
            event.preventDefault();
            if (confirm("포인트를 충전하시겠습니까?")) {
                newWindow = window.open('/toss/store', '_blank', 'width=650,height=650');
            }
        });
    });
</script>

