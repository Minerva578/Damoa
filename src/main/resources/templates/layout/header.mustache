            padding-bottom: 20px;
            background: #dfddda;
            display: flex !important;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        a:hover, h3:hover, h5:hover{
            color: #18A8F1;
        }

        .main{
            width: 100%;
            display: flex;
            flex-direction: column;
        }
        .header {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center; /* 양쪽으로 균등 배치 */
        }

        .upper-div {
            width: 88%; /* 적절한 너비 설정 */
            display: flex;
            align-items: center;
            justify-content: center; /* 양쪽으로 균등 배치 */
        }
        .title-img{
            width: 200px;
        }
        .login-bar{
            width: 70%;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: space-evenly;
            text-align:center;
            margin-top: 10px;
            margin-left:20px;
        }
        .nav-bar{
            width:100%;
            height: 20px;
            text-align: center;
            display: flex;
            align-items: center;
        }
        .menu-list{
            width: 50%;
            display: flex;
            align-items: center;
            margin-left:350px;
            text-align: center;
        }
        .menu-icon{
            width: 20px;
            margin-bottom: 2px;
            margin-left:5px;
            margin-right:15px;
        }
        .link{
            margin: -5px;
        }
        .nav-line{
            box-shadow: 2px 2px 5px #d0ccc9;
        }
        .drop-down-menus{
            display:none;
            position : absolute;
            z-index : 1;
        }
        .menu-icon:hover .drop-down-menus {
            display:block;
        }


        .main-board{
            background: #FEFEFE;
        }
        .ad-board{
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            margin-bottom: 20px;
        }
        .ad-outer{
            overflow-x: hidden;
        }
        .ad-inner{
            width: 1050px;
            display: flex;
            transition: .3c ease-out;
            margin: 0px auto;
        }
        .login-btn{
            padding-top:8px;
            text-align: center;
            border: 1px solid #DEDEDE;
            border-radius: 10px;
            background: white;
        }
        .slick-prev:before,
        .slick-next:before{
            color: #8bc7e2;
        }
        .ad-img{
        width: 1000px;
            margin-left:10px;
            margin-right:10px;
            border-radius: 20px;
        }
        .ad-bar{
            display: flex;
            align-items: center;
            text-align: center;
        }
        .ad-progress{
            width: 100px;
            height: 30px;
            border-radius: 20px;
            box-shadow: 2px 2px 5px #d0ccc9;
            background: #6c6661;
            margin-bottom: 60px;
        }
        .ad-progress-text {
            margin-top:5px;
            display: flex;
            text-align: center;
            justify-content: center;
            text-align: center;
            color: white;
        }
        .icons{
            width: 50px;
            margin: 5px;
        }
        .main-board{
            width:100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
        .main-board-box{
            margin: 10px;
            width: 58%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
        .main-inner-board{
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: start;
            margin-bottom: 70px;
        }
        .project-container, .freelancer-container{
            width: 90%;
            height: 10%;
            display: flex;
            align-items: space-evenly;
            text-align: left;
        }
        .project-box, .freelancer-box{
            border-radius: 15px;
            width: 40%;
            height: 100%;
            padding: 10px;
            display: flex;
            flex-direction: column;
        }
        .reccomend-asset-container{
            width: 100%;
            height: 10%;
            display: flex;
            align-items: center;
            text-align: center;
        }
        .asset-box{
            background-color: #f1f3f5;
            width: 50%;
            height: 130%;
            padding: 30px;
            border-radius: 10px;
            margin: 15px;
        }
        .section-bar{
            color: #dfddda;
            margin-left: 5px;
            margin-right: 5px;
        }

