{{> layout/header }}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        margin: 0;
        padding: 0;
    }

    .container {
        display: flex;
        width: 100%;
        min-height: 100vh;
        background-color: #f5f5f5;
        margin-top: 70px;
        padding-bottom: 20px;
    }

    .sidebar {
        width: 300px;
        background-color: #fff;
        padding: 20px;
        border-right: 1px solid #ddd;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        flex-shrink: 0;
    }

    .sidebar h2 {
        font-size: 20px;
        color: #333;
        margin-bottom: 20px;
    }

    .sidebar a {
        display: block;
        padding: 15px 20px;
        margin-bottom: 10px;
        color: #333;
        text-decoration: none;
        border-radius: 5px;
        background-color: #f9f9f9;
        font-size: 16px;
        transition: background-color 0.3s;
    }

    .sidebar a:hover {
        background-color: #e9ecef;
        color: #007bff;
    }

    .content {
        flex-grow: 1;
        padding: 40px;
        background-color: #fff;
        min-height: 100vh;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-left: 0;
    }

    .content h1 {
        font-size: 26px;
        margin-bottom: 20px;
        text-align: center;
        font-weight: bold;
    }

    .project-list {
        margin-bottom: 30px;
    }

    .project-item {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .project-item:hover {
        background-color: #f1f1f1;
    }

    .project-item h6 {
        font-size: 20px;
        margin: 0;
        color: #333;
    }

    .actions {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    button {
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        border: none;
        color: white;
        transition: background-color 0.3s;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-detail {
        background-color: #007bff; /* 버튼 색상 변경 */
    }

    .btn-detail:hover {
        background-color: #2779cf;
        color: white;
    }

    .form-container {
        margin-top: 20px;
    }

    .form-container select,
    .form-container button {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        margin-bottom: 10px;
        font-size: 16px;
    }

    .text-muted {
        color: #888;
        text-align: center;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

    .shadow-sm {
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container">
    <!-- 사이드바 - 프리랜서 전용 메뉴 -->
    <!-- 메인 컨텐츠 -->
    {{> layout/mypage}}
    <div class="content">
        <div>
            <h4>신청 중인 프로젝트</h4>
            <hr>
            {{#projectList}}
                <div class="project-item" onclick="location.href='/project/detail/{{id}}'">
                    <h6 style="display: inline;">{{projectName}}</h6>
                    <button onclick="location.href='/project/detail/{{id}}'" class="btn-detail">상세 페이지</button>
                </div>
            {{/projectList}}
        </div>
    </div>
</div>

<script>
    document.getElementById("editButton").addEventListener("click", function() {
        document.querySelector(".user-info").style.display = "none";
        document.querySelector(".edit-info").style.display = "block";
    });

    document.getElementById("cancelButton").addEventListener("click", function() {
        document.querySelector(".edit-info").style.display = "none";
        document.querySelector(".user-info").style.display = "block";
    });

    document.querySelectorAll('.purchase--btn').forEach(function(btn) {
        btn.addEventListener('click', function(event) {
            event.preventDefault();
            if (confirm("포인트를 충전하시겠습니까?")) {
                newWindow = window.open('/toss/store', '_blank', 'width=650,height=650');
            }
        });
    });
</script>

